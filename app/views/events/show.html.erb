<%- model_class = Event -%>
<div class="page-header">
  <h1>Событие #<%= @event.id %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @event.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_at) %>:</strong></dt>
  <dd><%= formatted_date @event.start_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @event.description %></dd>
</dl>

<%= link_to 'К календарю',
              events_path, :class => 'btn btn-default'  %>
<%= link_to 'Редактировать',
              edit_event_path(@event), :class => 'btn btn-default' %>
<%= link_to 'Удалить',
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
