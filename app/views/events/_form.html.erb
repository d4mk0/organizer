<%= simple_form_for @event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :start_at %>
  <%= f.input :description %>

  <%= f.button :submit, :class => 'btn-primary', value: 'Сохранить' %>
  <%= link_to 'Отмена', events_path, :class => 'btn btn-default' %>
<% end %>
